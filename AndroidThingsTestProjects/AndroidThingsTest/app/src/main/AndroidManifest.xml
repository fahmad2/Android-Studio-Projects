<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="developers.adpagri.com.androidthingstest">

    <uses-permission android:name="com.google.android.things.permissions.MODIFY_SCREEN_SETTINGS" />


    <application>
        <uses-library android:name="com.google.android.things" />

        <activity android:name=".MainActivity" android:hardwareAccelerated="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.IOT_LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>