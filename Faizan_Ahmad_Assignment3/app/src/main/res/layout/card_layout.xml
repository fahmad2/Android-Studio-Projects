<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:background="@color/cardview_light_background">


    <TextView
        android:layout_width="163dp"
        android:layout_height="26dp"
        android:id="@+id/noteTitle"
        android:layout_marginTop="16dp"
        card_view:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="148dp"
        android:layout_height="20dp"
        android:id="@+id/noteDate"
        card_view:layout_constraintTop_toBottomOf="@+id/noteTitle"
        card_view:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="342dp"
        android:layout_height="62dp"
        android:id="@+id/noteDesc"
        android:layout_marginTop="8dp"
        card_view:layout_constraintTop_toBottomOf="@+id/noteDate"
        card_view:layout_constraintLeft_toLeftOf="@+id/noteTitle"
        card_view:layout_constraintRight_toRightOf="@+id/noteDate"
        card_view:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>