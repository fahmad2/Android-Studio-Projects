<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.urfi.quicknotes.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="@string/IntroTextView" />

    <TextView
        android:layout_width="343dp"
        android:layout_height="49dp"
        android:id="@+id/textView6"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText5"
        app:layout_constraintLeft_toLeftOf="@+id/editText5"
        app:layout_constraintRight_toRightOf="@+id/editText5"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@drawable/my_drawable"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:padding="10dp"
        android:text="@string/initialDateText"
        tools:text="@string/initialDateText" />

    <EditText
        android:layout_width="343dp"
        android:layout_height="391dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText5"
        android:gravity="top"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/my_drawable"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="750" />
</android.support.constraint.ConstraintLayout>
