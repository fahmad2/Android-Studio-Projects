<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="4dp"
    android:background="#000">


    <TextView
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:id="@+id/stkSym"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="FB"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:id="@+id/stkPrice"
        android:layout_marginStart="24dp"
        card_view:layout_constraintLeft_toRightOf="@+id/stkSym"
        android:layout_marginLeft="24dp"
        android:gravity="center_vertical|center_horizontal"
        card_view:layout_constraintBaseline_toBaselineOf="@+id/stkSym"
        android:textAppearance="@android:style/TextAppearance.Material.Menu"
        android:text="-111" />

    <TextView
        android:layout_width="152dp"
        android:layout_height="33dp"
        android:id="@+id/stkChange"
        android:layout_marginStart="16dp"
        card_view:layout_constraintLeft_toRightOf="@+id/stkPrice"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical|center_horizontal"
        card_view:layout_constraintBaseline_toBaselineOf="@+id/stkPrice"
        android:textAppearance="@android:style/TextAppearance.Material.Menu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stkName"
        card_view:layout_constraintLeft_toLeftOf="@+id/stkSym"
        android:text="Apple Inc."
        card_view:layout_constraintTop_toBottomOf="@+id/stkSym"
        android:gravity="center_vertical|center_horizontal" />
</android.support.constraint.ConstraintLayout>